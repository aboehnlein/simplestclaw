{
  "$schema": "https://railway.com/railway.schema.json",
  "build": {
    "buildCommand": "pnpm --filter @simplestclaw/proxy install && pnpm --filter @simplestclaw/proxy build",
    "watchPatterns": ["apps/proxy/**"]
  },
  "deploy": {
    "startCommand": "pnpm --filter @simplestclaw/proxy start",
    "healthcheckPath": "/health",
    "healthcheckTimeout": 60,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
